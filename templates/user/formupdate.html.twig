{% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="registration-form" style="margin-top :-40px;">
{{ form_start(form)}}

    <div class="form-group">
        {{ form_label(form.name ,class="form-control item") }}
		{{ form_widget(form.name, {'attr': {'placeholder': '*name'}}) }}
		
	</div>
        <div class="form-group">
        {{ form_label(form.email,class="form-control item") }}
        {{ form_widget(form.email,{'attr': {'placeholder': 'example@example.com'}}) }}
		
        </div>
        <div class="form-group text-right">
          <button path('adduser') class="btn btn-success" type="submit" class="btn btn-success" >Update
          </button>         
           <a href="{{path('deleteuser', {'id': user.id})}}" type="submit" class="btn btn-danger" >Delete</a>
        </div>
{{ form_end(form) }}
